---
import Home from "../content/home.md";
---
<div
  data-welcome-wrapper
  class="fixed inset-0 z-50 flex items-center justify-center px-4 opacity-0 pointer-events-none invisible transition duration-300"
  aria-live="polite"
>
  <div
    data-welcome-overlay
    class="absolute inset-0 bg-brand-midnight/80 backdrop-blur-sm opacity-0 transition duration-300"
  ></div>
  <div
    data-welcome-notification
    class="relative z-10 w-full max-w-xl overflow-hidden rounded-3xl border border-brand-rose/40 bg-gradient-to-r from-brand-dusk/80 via-brand-dusk/50 to-brand-midnight/90 px-6 py-5 shadow-[0_15px_40px_rgba(20,18,33,0.85)] transition-all duration-300 ease-out scale-95 opacity-0 -translate-y-3"
  >
    <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-brand-rose via-brand-mauve to-brand-rose"></div>
    <div class="flex items-start gap-4">
      <div class="mt-1 flex h-14 w-14 items-center justify-center rounded-2xl border border-brand-rose/40 bg-brand-rose/10 text-brand-rose">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M17 3h4v2a5 5 0 0 1-4.78 4.99A6.01 6.01 0 0 1 13 14.71V17h3v2H8v-2h3v-2.29A6.01 6.01 0 0 1 7.78 9.99 5 5 0 0 1 3 5V3h4V1h10v2Zm2 2h-2a3 3 0 0 0 2 2Zm-14 0a3 3 0 0 0 2 2H5Z" />
        </svg>
      </div>
      <div class="flex-1 space-y-2 text-sm text-brand-linen/90">
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-brand-mauve/80">Achievement Unlocked</p>
        <div class="prose prose-sm prose-invert max-w-none text-brand-linen/90">
          <Home />
        </div>
      </div>
      <button
        type="button"
        class="ml-auto rounded-full border border-transparent p-1 text-brand-linen/60 transition hover:border-brand-rose/60 hover:text-brand-linen"
        aria-label="Dismiss welcome notification"
        data-welcome-dismiss
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
</div>
<script type="module" src="/scripts/welcome-notification.js"></script>
