---
const { title, subtitle, imgSrc = '/images/profilepic.jpg', imgAlt = 'Portrait' } = Astro.props;
---
<div class="flex flex-col sm:flex-row sm:items-center gap-6 mb-8 rounded-3xl border border-brand-dusk/60 bg-brand-dusk/20 p-6 shadow-lg shadow-brand-midnight/50">
  <img
      src={imgSrc}
      alt={imgAlt}
      width="240"
      height="240"
      class="mx-auto h-80 w-80 rounded-full border-4 border-brand-rose/80 shadow-xl shadow-brand-midnight/50"
      loading="eager"
      decoding="async"
      />
      <div class="space-y-2">
        {title && <h1 class="text-3xl font-semibold tracking-tight text-brand-linen">{title}</h1>}
        {subtitle && <p class="text-brand-mauve">{subtitle}</p>}
        <div class="flex gap-3">
          <slot name="actions" />
        </div>
      </div>
</div>
