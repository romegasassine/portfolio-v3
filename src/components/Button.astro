---
const { href, type = 'button' } = Astro.props;
const baseClasses =
  'inline-flex items-center rounded-xl px-4 py-2 font-semibold border border-brand-rose/70 bg-brand-rose text-brand-midnight shadow-md shadow-brand-midnight/40 transition hover:bg-brand-linen focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-rose/50';
---
{href ? (
  <a href={href} class={baseClasses}>
    <slot />
  </a>
) : (
  <button type={type} class={baseClasses}>
    <slot />
  </button>
)}
