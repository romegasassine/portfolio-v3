---
const { href, type = 'button' } = Astro.props;
---
{href ? (
  <a href={href} class="inline-flex items-center rounded-xl px-4 py-2 border shadow-sm hover:shadow transition">
    <slot />
  </a>
) : (
  <button type={type} class="inline-flex items-center rounded-xl px-4 py-2 border shadow-sm hover:shadow transition">
    <slot />
  </button>
)}
