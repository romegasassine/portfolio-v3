---
const { project } = Astro.props;
---
<article class="rounded-2xl border p-5 shadow-sm bg-white">
  <h3 class="text-lg font-semibold tracking-tight">
    <a href={project.url} rel="noopener noreferrer">{project.title}</a>
  </h3>
  <p class="mt-2 text-sm text-zinc-600">{project.description}</p>
  <div class="mt-3 text-sm">
    <a href={project.github} class="underline" rel="noopener noreferrer">GitHub</a>
  </div>
</article>
