---
const { project } = Astro.props;
---
<article class="rounded-2xl border border-brand-dusk/70 p-5 bg-gradient-to-b from-brand-dusk/60 via-brand-dusk/40 to-brand-midnight/80 backdrop-blur-sm shadow-lg shadow-brand-midnight/60 transition-transform transform hover:-translate-y-1 hover:shadow-2xl">
  <h3 class="text-lg font-semibold tracking-tight text-brand-linen">
    <a href={project.url} rel="noopener noreferrer">{project.title}</a>
  </h3>
  <p class="mt-2 text-sm text-brand-linen/80">{project.description}</p>
  <div class="mt-3 text-sm">
    <a href={project.github} class="underline text-brand-rose hover:text-brand-linen" rel="noopener noreferrer">GitHub</a>
  </div>
</article>
