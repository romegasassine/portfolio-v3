---
const { formName = 'contact' } = Astro.props;
---
<form name={formName} method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-4 max-w-xl">
  <input type="hidden" name="form-name" value={formName} />
  <p class="hidden">
    <label>Donâ€™t fill this out: <input name="bot-field" /></label>
  </p>

  <div>
    <label class="block text-sm font-medium">Name</label>
    <input name="name" required class="mt-1 w-full rounded-xl border px-3 py-2 bg-white" />
  </div>

  <div>
    <label class="block text-sm font-medium">Email</label>
    <input type="email" name="email" required class="mt-1 w-full rounded-xl border px-3 py-2 bg-white" />
  </div>

  <div>
    <label class="block text-sm font-medium">Message</label>
    <textarea name="message" rows="5" required class="mt-1 w-full rounded-xl border px-3 py-2 bg-white"></textarea>
  </div>

  <button type="submit" class="inline-flex items-center rounded-xl px-4 py-2 border shadow-sm hover:shadow transition">
    Send
  </button>
</form>
