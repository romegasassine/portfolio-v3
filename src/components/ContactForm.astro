---
import Button from "./Button.astro";
const { formName = 'contact' } = Astro.props;
const fieldClass = 'mt-1 w-full rounded-xl border border-brand-rose/50 bg-brand-linen text-brand-midnight px-3 py-2 placeholder-brand-mauve/70 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-rose/60';
---
<form
  name={formName}
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="space-y-5 max-w-xl rounded-3xl border border-brand-dusk/60 bg-brand-dusk/30 p-6 shadow-xl shadow-brand-midnight/50"
>
  <input type="hidden" name="form-name" value={formName} />
  <p class="hidden">
    <label>Donâ€™t fill this out: <input name="bot-field" /></label>
  </p>

  <div>
    <label class="block text-sm font-medium text-brand-linen">Name</label>
    <input name="name" required class={fieldClass} />
  </div>

  <div>
    <label class="block text-sm font-medium text-brand-linen">Email</label>
    <input type="email" name="email" required class={fieldClass} />
  </div>

  <div>
    <label class="block text-sm font-medium text-brand-linen">Message</label>
    <textarea name="message" rows="5" required class={`${fieldClass} resize-none`}></textarea>
  </div>

  <Button type="submit">Send</Button>
</form>
