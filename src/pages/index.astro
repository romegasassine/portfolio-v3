---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import projects from "../content/projects.json";
import ProjectCard from "../components/ProjectCard.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
import WelcomeNotification from "../components/WelcomeNotification.astro";
---
<Base title="Rachid Sassine â€” Portfolio" description="Software Developer Portfolio">
  <Header slot="header" />

  <Hero title="Rachid Sassine" subtitle="Software Developer @ HCLTech">
    <Button slot="actions" href="/documents/Rachid Raphael Sassine Resume.pdf">Resume</Button>
    <Button slot="actions" href="https://github.com/romegasassine">GitHub</Button>
  </Hero>

  <WelcomeNotification />

  <h3 class="pt-4 text-center font-bold text-brand-rose tracking-tight">My Projects </h3>
  {projects.length > 0 && (
    <section class="mt-10 grid gap-6 sm:grid-cols-2">
      {projects.map((p) => <ProjectCard project={p} />)}
    </section>
  )}

  <Footer slot="footer" />
</Base>
